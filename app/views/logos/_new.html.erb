<fieldset>
  <legend>Upload Company Logo</legend>

  <% form_for @logo, :html => {:multipart => true} do |form| %>
    <%= error_messages_for :logo %> 

    <div id="group">
      <div id="field separated">

    <% unless @logo.new_record? %>
      <div class="highlight" style="font-style: italic; font-size: 12px;">
        <strong>note:</strong> uploading a new image will overwrite the existing one.
      </div>
      <br />
    <%-end-%>
        <%= form.file_field :logo, :style => "float: left" %> 
        &nbsp; <%= form.submit 'Upload' %>
      </div>
    </div>

  <div id="logobox" style="margin-top: 10px;">
    <% unless @logo.new_record? %>
      <strong>Current Logo: </strong><br />
      <%= image_tag @logo.logo.url(:thumb), :class => "photo" %>
      <br />
      <%= link_to image_tag('/images/icons/green/x.gif'), logo_path(@logo), :method => :delete, :confirm => "Are you sure you want to delete this logo?", :title => "Delete", :alt => "Delete" %>
      
    <% end %>
  </div>

  <%- end -%>
</fieldset>

