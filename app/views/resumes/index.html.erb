<%= render :partial => 'seekers/sidebar', :seeker => @seeker %>

<fieldset>
  <legend>Current Resumes</legend>

  <table style="width: 100%;" class="alternate" border="0">
    <tr>
      <th><strong>name</strong></th>
      <th><strong>upload date</strong></th>
      <th><strong></strong></th>
    </tr>
    <% unless @resumes.nil? %>
      <% @resumes.each do |resume| %>
      <tr>
        <td><%= link_to resume.name, resume.resume.url %></td>
        <td><%= resume.created_at.to_formatted_s(:short) %></td>
        <td><%= link_to image_tag('/images/icons/trash.png'), resume, :confirm => 'Are you sure you want to delete this resume?', :method => :delete %></td>
      </tr>
      <% end %>
    <% end %>

  </table>

  <br />

  <%= link_to 'Upload New resume', new_resume_path, :class => "hoverGreen" %>

  <br />
  <br />

</fieldset>
