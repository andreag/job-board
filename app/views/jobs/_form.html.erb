  <!-- JOB DETAILS -->
  <div class="group">
    <div class="field">
      <%= f.label 'title', "Job Title:" %><%= required_field %><br />
      <%= f.text_field :title, :class => "textfield" %>
    </div>
  </div>

  <div class="group">
    <div class="field">
      <%= f.label 'description', "Job Description:" %><%= required_field %><br />
      <%= f.text_area :description, :cols => 70, :rows => 10, :class => "textfield" %>
    </div>
  </div>

  <div class="group">
    <div class="field">
      <%= f.label 'qualifications', "Qualifications:" %><br />
      <%= f.text_area :qualifications, :cols => 70, :rows => 5, :class => "textfield" %>
    </div>
  </div>

